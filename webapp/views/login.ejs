<% include header%>

    <div class="" style="width: 300px;margin:auto;margin-top: 10%;">
        <% if (msg) {%>
            <div class="alert alert-danger" role="alert">
                <%=msg%>
            </div>
        <%}%>

        <form role="form" action="" method="post" class="login-form">
            <div class="form-group">
                账号:
                <input type="text" name="user" placeholder="账号" class="form-username form-control" id="user">
            </div>
            <div class="form-group">
                密码:
                <input type="password" name="pwd" placeholder="密码" class="form-password form-control" id="pwd">
            </div>
            <button type="submit" class="btn btn-sm btn-outline-secondary">登录</button>
        </form>
    </div>


    <% include footer%>